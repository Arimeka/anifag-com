extends ./layouts/application

block content
  .row
    .col-lg-8.col-md-10.mx-auto
      | {{ range .Articles }}
      include ./partials/_article
      | {{ end }}
      hr
      // Pager
      .clearfix
        | {{ if ne .PrevPage "" }}
        a.btn.btn-primary.float-left(href='{{ .PrevPage }}') ← Позже
        | {{ end }}
        | {{ if ne .NextPage "" }}
        a.btn.btn-primary.float-right(href='{{ .NextPage }}') Раньше →
        | {{ end }}
