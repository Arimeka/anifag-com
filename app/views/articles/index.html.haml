- content_for :title, "#{t('activerecord.models.article.title')} - Anime Fag"

.row
  .col-lg-9.col-md-9
    .posts-feed
      = render partial: 'articles/article_feed', collection: @articles, as: :article
    = render 'shared/blocks/pagination'
    .row
      .col-md-12.hidden-sm.hidden-xs
        .js-banner#articles-feed-footer-banner{data: {max_width: '840px'}}
  %aside.col-lg-3.col-md-3
    .row
      .col-md-12
        .js-banner#articles-aside-banner-top{data: {max_width: '290px'}}
    = render 'shared/blocks/aside_video_block'
    = render 'shared/blocks/aside_gallery_block'

