.row
  .col-sm-6
    .form-group
      = form.label :title, class: 'col-sm-4 control-label'
      .col-sm-8= form.text_field :title, class: 'form-control'
    .form-group
      = form.label :published_at, class: 'col-sm-4 control-label'
      .col-sm-5= form.text_field :published_at, class: 'form-control', id: 'datetimepicker'
  .col-sm-6
    .checkbox
      = form.label :is_published do
        = form.check_box :is_published
        = t('activerecord.attributes.article.is_published')
.row
  .col-sm-12
    .form-group
      = form.label :tag_list, class: 'col-sm-2 control-label'
      .col-sm-8
        =# form.text_field :tag_list, class: 'form-control tags-tokenizer', data: {taggable: 'articles'}
        %span.help-block= t('label.form.adding_by_enter_or_comma')
    .form-group
      = form.label :content, class: 'col-sm-2 control-label'
      .col-sm-8= form.text_area :content, rows: 30, cols: 25, class: 'form-control tinymce'
