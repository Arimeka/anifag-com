!!!
%html{:lang => "en"}
  %head
    %meta{charset: 'utf-8'}
    %meta{content: 'IE=edge', 'http-equiv '=> 'X-UA-Compatible'}
    %meta{content: '', name: 'description'}
    %meta{content: 'width=device-width, initial-scale=1', name: 'viewport'}
    %title= content_for?(:title) ? yield(:title) : 'Anime Fag'

    %meta{name: 'description', content: content_for?(:description) ? (yield :description) : 'Новости аниме и манги.'}
    %meta{name: 'keywords', content: content_for?(:keywords) ? (yield :keywords) : 'новости, аниме, манга, япония'}

    %meta{content: 'summary_large_image', name: 'twitter:card'}
    %meta{content: '@wrk_navi', name: 'twitter:creator'}
    %meta{content: content_for?(:image) ? (yield :image) : image_url('logo-share-default.png'), name: 'twitter:image:src'}
    %meta{content: 'anifag.com', name: 'twitter:domain'}
    %meta{content: content_for?(:title) ? yield(:title) : 'Anime Fag', name: 'twitter:title'}
    %meta{content: content_for?(:description) ? (yield :description) : 'Новости аниме и манги.', name: 'twitter:description'}

    %meta{property: 'vk:description', content: content_for?(:description) ? (yield :description) : 'Новости аниме и манги.'}
    %meta{property: 'vk:title', content: content_for?(:title) ? yield(:title) : 'Anime Fag'}

    %meta{property: 'og:site_name', content: 'Anime Fag'}
    %meta{property: 'og:title', content: content_for?(:title) ? yield(:title) : 'Anime Fag'}
    %meta{property: 'og:type', content: content_for?(:type) ? (yield :type) : 'website'}
    %meta{property: 'og:image', content: content_for?(:image) ? (yield :image) : image_url('logo-share-default.png')}
    %meta{property: 'og:url', content: get_current_url }
    %meta{property: 'og:description', content: content_for?(:description) ? (yield :description) : 'Новости аниме и манги.'}

    - if content_for? :og_published_at
      %meta{property: 'og:article:published_time', content: yield(:og_published_at)}
    - if content_for? :og_section
      %meta{property: 'og:article:section', content: yield(:og_section)}
    - if content_for? :og_tags
      = yield :og_tags

    %meta{property: 'og:locale:locale', content: 'ru_ru'}

    %link{rel: 'image_src', href: content_for?(:image) ? (yield :image) : image_url('logo-share-default.png')}

    %link{href: 'https://plus.google.com/+Anifag', rel: 'publisher'}

    = csrf_meta_tags
    / Le HTML5 shim, for IE6-8 support of HTML elements
    /[if lt IE 9]
      = javascript_include_tag "//cdnjs.cloudflare.com/ajax/libs/html5shiv/3.6.1/html5shiv.js"
    = stylesheet_link_tag 'normalize'
    = stylesheet_link_tag 'devise', media: 'all'

    = favicon_link_tag 'apple-touch-icon.png', rel: 'apple-touch-icon', type: 'image/png'
    = favicon_link_tag 'favicon.ico', rel: 'shortcut icon'

    = javascript_include_tag 'modernizr-2.8.3.min'
  %body
    .container
      = bootstrap_flash
      = yield
    = javascript_include_tag 'devise'
