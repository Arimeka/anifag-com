!!! 5
%html(lang="en")
  %head
    %meta{charset: 'utf-8'}
    %meta{content: 'IE=edge', 'http-equiv '=> 'X-UA-Compatible'}
    %meta{content: '', name: 'description'}
    %meta{content: 'width=device-width, initial-scale=1', name: 'viewport'}
    %title= content_for?(:title) ? yield(:title) : 'Anime Fag'
    = csrf_meta_tags
    / Le HTML5 shim, for IE6-8 support of HTML elements
    /[if lt IE 9]
      = javascript_include_tag "//cdnjs.cloudflare.com/ajax/libs/html5shiv/3.6.1/html5shiv.js"
    = stylesheet_link_tag 'normalize'
    = stylesheet_link_tag 'application', media: 'all'

    = favicon_link_tag 'apple-touch-icon.png', rel: 'apple-touch-icon', type: 'image/png'
    = favicon_link_tag 'favicon.ico', rel: 'shortcut icon'

    = javascript_include_tag 'modernizr-2.8.3.min'


  %body{class: controller.controller_name}
    #wrapper.container
      .row
        %header
          .container
            .row
              .col-lg-12
                = link_to root_path do
                  .logo Anime Fag
              .col-lg-12
                %nav.navbar.navbar-head
                  .container-fluid
                    .navbar-header
                      %button.navbar-toggle.collapsed{'aria-expanded' => false, 'data-target' => '#navbar-collapse', 'data-toggle' => 'collapse', type: 'button'}
                        %span.sr-only Toggle navigation
                        %span.icon-bar
                        %span.icon-bar
                        %span.icon-bar

                    .collapse.navbar-collapse#navbar-collapse
                      %ul.nav.navbar-nav
                        %li{class: active_action?('posts', 'index')}= link_to 'Посты', articles_path
                        %li{class: active_action?('galleries', 'index')}= link_to 'Галереи', galleries_path
                        %li{class: active_action?('videos', 'index')}= link_to 'Видео', '#'

        %main
          .container
            .row
              .col-lg-12
                = bootstrap_flash
                = yield
        %footer
          .container
            .row
              .col-lg-12
                .navbar.navbar-footer
                  .col-lg-2.col-sm-3.col-xs-8
                    = link_to root_path do
                      .logo-footer Anime Fag
                  .col-lg-3.col-sm-3.col-xs-4
                    %ul.list-unstyled
                      %li= link_to 'Посты', articles_path
                      %li= link_to 'Галереи', galleries_path
                      %li= link_to 'Видео', '#'


    = javascript_include_tag 'application'
